        <Label Content="Введите параметр" HorizontalAlignment="Left" Height="26" Margin="66,162,0,0" VerticalAlignment="Top" Width="156"/>
        <Label Content="Запросы" HorizontalAlignment="Left" Height="26" Margin="63,12,0,0" VerticalAlignment="Top" Width="156"/>
        <TextBox x:Name="TexBoxParam" HorizontalAlignment="Left" Height="19" Margin="68,193,0,0" TextWrapping="Wrap" VerticalAlignment="Top" Width="146" MouseDown="TexBoxParam_MouseDown" TouchDown="TexBoxParam_TouchDown"/>
        <ComboBox x:Name="ComboboxParam" Margin="66,217,536,173" SelectionChanged="ComboboxParam_SelectionChanged" Initialized="ComboboxParam_Initialized"/>

    </Grid>
</Window>
